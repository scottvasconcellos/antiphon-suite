{
  "name": "antiphon-suite-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm -r --parallel --filter @antiphon/layer0-authority --filter @antiphon/layer0-hub dev",
    "dev:hub": "pnpm --filter @antiphon/layer0-hub dev",
    "dev:authority": "pnpm --filter @antiphon/layer0-authority dev",
    "build": "pnpm --filter @antiphon/layer0-authority build && pnpm --filter @antiphon/layer0-hub build",
    "typecheck": "pnpm --filter @antiphon/layer0-authority typecheck && pnpm --filter @antiphon/layer0-hub typecheck",
    "smoke": "node scripts/control-plane-smoke.mjs && node scripts/foundation-smoke.mjs",
    "test:control-plane": "node scripts/control-plane-smoke.mjs",
    "test:engine": "node scripts/engine-smoke.mjs",
    "test:structure": "node scripts/structure-smoke.mjs",
    "test": "node scripts/foundation-smoke.mjs",
    "gate": "node scripts/gate.mjs",
    "demo:hub": "node scripts/demo-hub.mjs",
    "demo:layer": "node scripts/demo-layer.mjs",
    "release:check": "node scripts/release-check.mjs",
    "verify": "node scripts/integration-check.mjs",
    "proof:layer-app": "node scripts/proof-layer-app.mjs",
    "loop:layer-app": "node scripts/layer-app-install-loop.mjs",
    "loop:layer-app:multi": "node scripts/layer-app-install-loop.mjs --multi",
    "demo": "node scripts/demo.mjs",
    "rc-check": "node scripts/rc-check.mjs",
    "rc-scope-proof": "node scripts/rc-scope-proof.mjs"
  }
}
