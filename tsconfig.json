{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@antiphon/types/*": ["shared/types/*"],
      "@antiphon/constants/*": ["shared/constants/*"]
    }
  },
  "include": ["packages", "shared"]
}
